<h1 align="center">@<%= current_user.username %>'s Feed</h1>
<p align="center">Here's what your amazing friends are saying!</p>


<%= render 'tweets/form.html.erb', tweet: @tweet %>


<div>
	<% @following_tweets.each do |tweet|%>
		<div class="well">
			<p>
				<%= image_tag tweet.user.avatar.url, size: 40%>
				<%= link_to tweet.user.name, show_user_path(id: tweet.user_id)%>
				@<%= link_to tweet.user.username, show_user_path(id: tweet.user_id)%>
				- <%= (time_ago_in_words(tweet.created_at) + " ago") if Time.now - tweet.created_at <86400 %>
			</p>

			<p><%=tweet.message.html_safe%></p>
		</div>
	<% end %>
</div>